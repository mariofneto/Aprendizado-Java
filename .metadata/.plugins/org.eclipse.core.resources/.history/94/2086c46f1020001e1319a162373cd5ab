package learningScanner;
import java.util.Scanner;

public class LearningScanner {

	public static void main(String[] args) {
		
		Scanner scanner = new Scanner(System.in);
		
		System.out.println("Escreva abaixo dois numeros para serem somados");
		String numero1 = scanner.nextLine();
		String numero2 = scanner.nextLine();
		
		System.out.println("A soma dos dois números é igual a: "+(numero1+numero2));
	}

}
